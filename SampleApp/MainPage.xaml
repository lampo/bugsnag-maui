<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />

            <Button
                Clicked="OnCrashClicked"
                HorizontalOptions="Fill"
                Text="Click me to Crash" />

            <Button
                Clicked="OnErrorClicked"
                HorizontalOptions="Fill"
                Text="Click me to Report Error" />
            
            <Button
                Clicked="OnNestedErrorClicked"
                HorizontalOptions="Fill"
                Text="Click me to Report Nested Error" />

            <Button
                Clicked="OnBreadcrumbClicked"
                HorizontalOptions="Fill"
                Text="Click me to LEave Breadcrumb" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
